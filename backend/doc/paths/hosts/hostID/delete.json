{
	"operationId": "deleteHost",
	"summary": "Delete a Host",
	"tags": [
		"Hosts"
	],
	"parameters": [
		{
			"in": "path",
			"name": "hostID",
			"schema": {
				"type": "integer",
				"minimum": 1
			},
			"required": true,
			"description": "Numeric ID of the Host",
			"example": 1
		}
	],
	"responses": {
		"200": {
			"description": "200 response",
			"content": {
				"application/json": {
					"schema": {
						"$ref": "#/components/schemas/DeletedItemResponse"
					},
					"examples": {
						"default": {
							"value": {
								"result": true
							}
						}
					}
				}
			}
		},
		"400": {
			"description": "400 response",
			"content": {
				"application/json": {
					"schema": {
						"$ref": "#/components/schemas/DeletedItemResponse"
					},
					"examples": {
						"default": {
							"value": {
								"result": null,
								"error": {
									"code": 400,
									"message": "You cannot delete a host that is in use!"
								}
							}
						}
					}
				}
			}
		}
	}
}